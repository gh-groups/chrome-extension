{
    "manifest_version": 3,
    "name": "GitHub Groups",
    "version": "1.0",
    "description": "Add groups feature to GitHub organizations",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://github.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    }
}